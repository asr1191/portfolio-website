{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@posts/*": [
                "posts/*"
            ],
            "@public/*": [
                "public/*"
            ],
            "@images/*": [
                "public/images/*"
            ],
            "@fonts/*": [
                "public/fonts/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@generated/*": [
                "./.contentlayer/generated/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        }
    },
    "include": [
        ".contentlayer/generated",
        "components/",
        "posts/",
        "public/",
        "utils/"
    ]
}